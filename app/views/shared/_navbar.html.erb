<div class="container-fluid">
  <nav class="navbar navbar-light bg-light">
    <form class="form-inline container-fluid">
      <% if signed_in? %>
      <div class="row container-fluid">
        <!-- <div class="col-2 d-flex justify-content-start"><div><img src= "<%= current_user.profile_picture %>" alt="<%=current_user.username%>" class= "img-thumbnail w-25 p-1"></div></div> -->
        <div class="col-6 d-flex justify-content-start">
          <div class="mx-0">
            <%= link_to edit_user_registration_path do %>
              <%= image_tag current_user.profile_picture, class: 'img-thumbnail w-25 p-0', alt: current_user.username%>
              <%= current_user.username%>
            <% end %>
          </div>
        </div>
        <div class="col-6 d-flex justify-content-end">
          <button type="button" class="btn btn-light btn btn-outline-primary mx-1 align-middle btn-navbar"><%= link_to 'New Tweet', new_tweet_path %></button>
          <button type="button" class="btn btn-light btn btn-outline-primary mx-1 align-middle btn-navbar"><%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete %></button>
        </div>

        <% else %>
        <div class="col-2 d-flex justify-content-start">
          <div class= "mx-0">
            <p><%= link_to "Twitter", root_path %></p>
          </div>
        </div>
        <div class="col-10 d-flex justify-content-end">
          <button class="btn btn-outline-primary mx-1 align-middle btn-navbar" type="button"><%= link_to "Registrarse", new_user_registration_path %></button>
          <button class="btn btn-outline-primary mx-1 align-middle btn-navbar" type="button"><%= link_to "Ingresar", new_user_session_path %></button>
        </div>
        <% end %>
      </div>
    </form>
  </nav>
</div>